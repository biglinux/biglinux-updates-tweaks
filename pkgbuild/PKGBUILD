# Maintainer: Bruno Goncalves <bigbruno@gmail.com>

pkgname=biglinux-updates-tweaks
pkgver=$(date +%y.%m.%d)
pkgrel=$(date +%H%M)
arch=('any')
license=('GPL')
depends=('biglinux-keyring')
url="https://github.com/biglinux/biglinux-updates-tweaks"
pkgdesc="BigBashView is a python app to run Bash+HTML in a Desktop WebView"
depends=('pyside2' 'python-six' 'webkit2gtk-4.1')
source=("git+https://github.com/biglinux/biglinux-updates-tweaks.git")
md5sums=(SKIP)

package() {
    # Verify default folder
    if [ -d "${srcdir}/${pkgname}/${pkgname}" ]; then
        InternalDir="${srcdir}/${pkgname}/${pkgname}"
    else
        InternalDir="${srcdir}/${pkgname}"
    fi


    # Copy files
    if [ -d "${InternalDir}/usr" ]; then
        cp -r "${InternalDir}/usr" "${pkgdir}/"
    fi

    if [ -d "${InternalDir}/etc" ]; then
        cp -r "${InternalDir}/etc" "${pkgdir}/"
    fi

    if [ -d "${InternalDir}/opt" ]; then
        cp -r "${InternalDir}/opt" "${pkgdir}/"
    fi
}


